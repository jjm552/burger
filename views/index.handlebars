<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/assets/css/style.css" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
</head>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Eat-Da-Burger</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h2>Burgers I want to eat!</h2>

            <ul>
                {{#each burger}}
                    {{#unless this.devoured}}
                        <li>
                            {{this.burger_name}}

                            <form action="/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devoured" value=" true ">
                                <button type="submit" class="btn btn-default">Devour!</button>
                            </form>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4">
            <h2>Add a burger to the eat list</h2>
            <form class="create-update-form" action="/" method="POST">

                <div class ="form-group">
                    <lable for="bn">Burger Name:</lable>
                    <input type="text" id="bn" name="burger_name">
                </div>
                <button type="submit" class="btn btn-success">Add burger</button>
            </form>
        </div>
        <div class="col-md-4">
            <h2>Burgers I've eaten!</h2>

            <ul>
                {{#each burger}}
                    {{#if this.devoured}}
                        <li>
                            {{this.burger_name}}
                            <form action="/{{this.id}}?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-danger">Delete Burger</button>
                            </form>

                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>             


